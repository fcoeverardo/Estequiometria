<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/keyboradbackgournd">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/keyboardwrapper"
                android:layout_width="900dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:padding="10dp">

                <android.inputmethodservice.KeyboardView
                    android:id="@+id/keyboardview"
                    android:background="@drawable/keyboardbackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:keyBackground="@drawable/keysbackground"
                    android:keyTextColor="@color/keyboradkey"
                    android:labelTextSize="14sp"
                    android:keyTextSize="14sp"
                    android:shadowRadius="0"
                    android:shadowColor="#00000000" />

            </FrameLayout>


        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>